<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/yellowcircle2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/yellowcircle"
        />
    <TextView
        android:id="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tiêu đề"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/yellowcircle2"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvdatetime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvsource1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ: "
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/tvTitle1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle1"
        />
    <TextView
        android:id="@+id/tvsourceAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tvsource1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle1"
        />
    <TextView
        android:id="@+id/tvreason1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lý do: "
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/tvsource1"
        app:layout_constraintTop_toBottomOf="@id/tvsourceAnswer1"
        />
    <TextView
        android:id="@+id/tvreasonAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tvreason1"
        app:layout_constraintTop_toBottomOf="@id/tvsourceAnswer1"
        />
    <TextView
        android:id="@+id/tvabsencedate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày xin nghỉ: "
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/tvreason1"
        app:layout_constraintTop_toBottomOf="@id/tvreasonAnswer1"
        />
    <TextView
        android:id="@+id/tvabsencedateAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tvabsencedate1"
        app:layout_constraintTop_toBottomOf="@id/tvreasonAnswer1"
        />
    <TextView
        android:id="@+id/tvconfirm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvabsencedateAnswer1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

