<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_album_detail"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1"

            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_Payroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:id="@+id/home_ivPayroll"
                    android:layout_width="94dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/home_Payroll"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/manager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Xin Chào :"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/home_ivPayroll"
                    app:layout_constraintStart_toEndOf="@+id/home_ivPayroll"
                    app:layout_constraintTop_toTopOf="@+id/home_ivPayroll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="55dp"
                    android:text=" Giám đốc"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/home_ivPayroll"
                    app:layout_constraintStart_toEndOf="@+id/home_ivPayroll"
                    app:layout_constraintTop_toTopOf="@+id/home_ivPayroll" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/home_ivPayroll"
                    app:layout_constraintStart_toEndOf="@+id/home_ivPayroll"
                    app:layout_constraintTop_toTopOf="@+id/home_ivPayroll" />

                <View
                    style="@style/Divider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextClock
                    android:id="@+id/textView"
                    android:layout_width="137dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="165dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:format24Hour="hh:mm"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text1" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_Payroll22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/home_ivPayroll">


                    <Button
                        android:id="@+id/Button22"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                        android:layout_width="366dp"
                        android:layout_height="66dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:text="Lịch làm việc            "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.6" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_Payroll33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/home_Payroll22">


                    <Button
                        android:id="@+id/Button44"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                        android:layout_width="366dp"
                        android:layout_height="66dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_list_alt_24"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:text="Dyệt đơn xin nghỉ     "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_Payroll44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_Payroll33">


                    <Button
                        android:id="@+id/button22"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                        android:layout_width="366dp"
                        android:layout_height="66dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:text="Duyệt đơn góp ý       "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_Payroll45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_Payroll44">


                    <Button
                        android:id="@+id/button23"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                        android:layout_width="366dp"
                        android:layout_height="66dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_manage_accounts_24"
                        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                        android:text="Quản lý nhân viên       "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/payrollcal_relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="320dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintStart_toStartOf="@+id/home_Payroll22"
                    app:layout_constraintTop_toBottomOf="@+id/home_Payroll22">

                    <Button
                        android:id="@+id/payrollcal_btnUnselect"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:drawableTop="@drawable/ic_baseline_notifications_active_24"

                        android:text="Notification"
                        android:textAllCaps="false"
                        android:textColor="@color/black"


                        />

                    <Button
                        android:id="@+id/Button4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:drawableTop="@drawable/ic_round_home_24"


                        android:text="Home"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/Button5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"

                        android:drawableTop="@drawable/ic_baseline_person_24"

                        android:text="About"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>